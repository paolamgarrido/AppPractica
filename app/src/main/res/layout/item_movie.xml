<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="4dp"
    android:id="@+id/medalInfo">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0dp">

        <!-- Use a horizontal LinearLayout to place ImageView and TextView side by side -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/semiWhite"
            android:padding="8dp">

            <!-- ImageView on the left -->
            <ImageView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/IVMovie" />

            <!-- A vertical LinearLayout to stack TextViews for title, vote_average, and overview -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <!-- Movie Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/semiBlack"
                    android:gravity="center_vertical"
                    android:text="Movie Title"
                    android:id="@+id/TVMovieTitle"
                    android:textStyle="bold" />

                <!-- Vote Average -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/semiBlack"
                    android:layout_marginTop="4dp"
                    android:text="Vote Average: 8.5"
                    android:id="@+id/TVVoteAverage" />

                <!-- Movie Overview -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/semiBlack"
                    android:layout_marginTop="4dp"
                    android:text="Overview goes here"
                    android:id="@+id/TVOverview" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
